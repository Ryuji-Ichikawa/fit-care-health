<div class="main">
  <div class="inner">
    <div class="form__wrapper">
      <h2 class="page-heading">プロフィール編集</h2>
       <%= form_with model: @user, url: user_registration_path, local: true do |f| %>

        <div class="field">
          <%= f.label :image, "アイコン画像" %><br />
          <%= f.file_field :image, id:"image" %>
        </div>

        <div class="field">
          <%= f.label :nickname, "ニックネーム" %><br />
          <%= f.text_field :nickname, id:"nickname", class: "form-label" %>
        </div>

        <div class="field">
          <%= f.label :email, "メールアドレス" %><br />
          <%= f.email_field :email, id:"email", autofocus: true, autocomplete: "email" %>
        </div>

        <div class="field">
          <%= f.label :profile, "プロフィール" %><br />
          <%= f.text_area :profile, class: :form__text, id:"user_profile" %>
        </div>

        <div class="actions">
          <%= f.submit "登録する", class: :form__btn  %>
        </div>
      <% end %>
    </div>
  </div>
</div>
