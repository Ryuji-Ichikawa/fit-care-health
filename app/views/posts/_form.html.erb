<%= form_with model: @post, local: true do |f|%>
  <div class="field">
    <%= f.label :title, "ヘルスケアの名称" %><br />
    <%= f.text_field :title, id:"title" %>
  </div>

  <div class="field">
    <%= f.label :catch_copy, "キャッチコピー" %><br />
    <%= f.text_area :catch_copy, class: :form__text, id:"catch_copy" %>
  </div>

  <div class="field">
    <%= f.label :concept, "コンセプト" %><br />
    <%= f.text_area :concept, class: :form__text, id:"concept" %>
  </div>

  <div class="field">
    <%= f.label :image, "ヘルスケアの画像" %><br />
    <%= f.file_field :image, id:"image" %>
  </div>

  <div class="field">
      <%= f.label :tag_name, "タグ" %>
      <%= "スペースを入力することで複数のタグを付けることができます。" %>
      <%= "例：音楽 文芸 スポーツ" %>
      <%= f.text_field :tag_name, id:"tag_name" %>
    </div>

  <div class="actions">
    <%= f.submit "保存する", class: :form__btn  %>
  </div>
<% end %>