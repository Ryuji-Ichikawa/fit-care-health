<% if user_signed_in? %>
  <% if current_user.already_liked?(@post) %>
    <%= button_to 'いいねを取り消す', post_like_path(@post), method: :delete %><i class="fa fa-heart unlike-btn"><%= @post.likes.count %></i>
  <% else %>
    <%= button_to 'いいね', post_likes_path(@post) %><i class="fa fa-heart like-btn"><%= @post.likes.count %></i>
  <% end %>
  <h2>いいねしたユーザー</h2>
  <% @post.liked_users.each do |user| %>
    <li><%= user.email %></li>
  <% end %>
<% else %>
  <h5>いいね件数: <i class="fa fa-heart unlike-btn"><%= @post.likes.count %></i></h5>
<% end %>